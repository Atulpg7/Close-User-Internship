<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_add_card_popup"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".10"
            android:fontFamily="sans-serif-thin"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Add a new Card"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/close_btn_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight=".80"
            android:src="@drawable/close_btn" />

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_cardno"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:layout_weight=".30"
            android:textSize="14sp"
            android:background="@drawable/edit_text_bg"
            android:hint="Card Number"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="16"
            android:paddingLeft="10dp"
            android:fontFamily="sans-serif-light"
            android:imeOptions="actionDone"
            android:textColor="@color/black" />



        <EditText
            android:id="@+id/et_cvv"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:layout_weight=".90"
            android:textSize="14sp"
            android:background="@drawable/edit_text_bg"
            android:hint="CVV"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="4"
            android:paddingLeft="10dp"
            android:imeOptions="actionDone"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_exmonth"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight=".50"
            android:background="@drawable/edit_text_bg"
            android:hint="Expiry Month"
            android:textSize="14sp"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="2"
            android:paddingLeft="10dp"
            android:imeOptions="actionDone"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/black" />



        <EditText
            android:id="@+id/et_exyear"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight=".50"
            android:background="@drawable/edit_text_bg"
            android:hint="Expiry year"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="4"
            android:paddingLeft="10dp"
            android:imeOptions="actionDone"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/black" />

    </LinearLayout>


    <TextView
        android:id="@+id/btn_add_card_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Add Card"
        android:gravity="center"
        android:textStyle="bold"
        android:background="@drawable/add_popup_btn_bg"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:padding="8dp"/>

</LinearLayout>