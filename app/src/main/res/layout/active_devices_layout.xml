<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="25dp"
    android:layout_height="180dp"
    android:layout_margin="15dp"
    android:background="@drawable/card_bg_main_page"
    android:orientation="vertical">


    <TextView
        android:id="@+id/device_model"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GOOGLE android sdk built for x86"
        android:fontFamily="sans-serif-light"
        android:gravity="start"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAllCaps="true"/>


    <TextView
        android:id="@+id/login_time"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/device_model"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_centerInParent="true"
        android:text="Last Login Session Time : 25/06/20 05:32"
        android:fontFamily="sans-serif-light"
        android:textSize="15dp"/>



    <TextView
        android:layout_marginTop="25dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/login_time"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:gravity="start"
        android:layout_height="wrap_content"
        android:text="Active Time: 0 hours"
        android:fontFamily="sans-serif-light"
        android:textSize="15dp"/>

</RelativeLayout>